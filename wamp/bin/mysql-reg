#!/bin/sh
#
# Wrapper for calling MySQL
#

#
# Make errors fatal
#
set -e

#
# Get the current directory
#
DIR=`dirname $0`

. ${DIR}/core.sh

USER=`${PHP} ${DIR}/mysql-reg-data ${WAMP} user`
PASS=`${PHP} ${DIR}/mysql-reg-data ${WAMP} pass`
HOST=`${PHP} ${DIR}/mysql-reg-data ${WAMP} host`
DATABASE=`${PHP} ${DIR}/mysql-reg-data ${WAMP} database`

${MYSQL} -u ${USER} -p${PASS} ${DATABASE} $@


